<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Dashboard - {{profile.name}}</title>
    <link href="/public/css/profile-dashboard.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="dashboard-header">
            <div class="header-content">
                <h1><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
                <div class="user-info">
                    <div class="user-status">
                        {{#if stats.isRecentlyActive}}
                            <span class="status-indicator active">
                                <i class="fas fa-circle"></i> Active
                            </span>
                        {{else}}
                            <span class="status-indicator inactive">
                                <i class="fas fa-circle"></i> Away
                            </span>
                        {{/if}}
                    </div>
                    <span class="welcome-text">Welcome back, {{profile.name}}!</span>
                </div>
                <div class="header-actions">
                    <button onclick="window.location.href='/'" class="btn btn-secondary">
                        <i class="fas fa-home"></i> Home
                    </button>
                    <button onclick="logout()" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="dashboard-main">
            <!-- Stats Cards Row -->
            <div class="stats-row">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-info">
                        <h3>{{stats.daysSinceJoin}}</h3>
                        <p>Days as Member</p>
                        <small>Since {{stats.memberSince}}</small>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon completion">
                        <i class="fas fa-chart-pie"></i>
                    </div>
                    <div class="stat-info">
                        <h3>{{stats.profileCompletion}}%</h3>
                        <p>Profile Complete</p>
                        <small>{{#if (eq stats.profileCompletion 100)}}All done!{{else}}Keep improving{{/if}}</small>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon activity">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-info">
                        <h3>{{stats.daysSinceLastLogin}}</h3>
                        <p>Days Since Login</p>
                        <small>Last: {{stats.lastLoginDate}}</small>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon status">
                        {{#if stats.isRecentlyActive}}
                            <i class="fas fa-user-check"></i>
                        {{else}}
                            <i class="fas fa-user-clock"></i>
                        {{/if}}
                    </div>
                    <div class="stat-info">
                        <h3>{{#if stats.isRecentlyActive}}Active{{else}}Away{{/if}}</h3>
                        <p>Account Status</p>
                        <small>{{#if stats.isRecentlyActive}}Recently online{{else}}Been a while{{/if}}</small>
                    </div>
                </div>
            </div>

            <!-- Profile Card -->
            <div class="profile-card">
                <div class="profile-header">
                    <div class="profile-picture-container">
                        {{#if profile.profilePictureUrl}}
                            <img src="{{profile.profilePictureUrl}}" alt="Profile Picture" class="profile-picture" id="profileImg">
                        {{else}}
                            <div class="profile-picture-placeholder">
                                <i class="fas fa-user"></i>
                            </div>
                        {{/if}}
                        <button class="upload-btn" onclick="document.getElementById('profilePictureInput').click()">
                            <i class="fas fa-camera"></i>
                        </button>
                        <form id="profilePictureForm" enctype="multipart/form-data" style="display: none;">
                            <input type="file" id="profilePictureInput" name="profilePicture" accept="image/*" onchange="uploadProfilePicture()">
                        </form>
                    </div>
                    <div class="profile-info">
                        <h2>{{profile.name}}</h2>
                        <p class="email">{{profile.email}}</p>
                        <div class="profile-completion">
                            <span class="completion-label">Profile Completion:</span>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: {{stats.profileCompletion}}%"></div>
                            </div>
                            <span class="completion-percentage">{{stats.profileCompletion}}%</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dashboard Grid -->
            <div class="dashboard-grid">
                <!-- Profile Details -->
                <div class="profile-details">
                    <div class="details-section">
                        <h3><i class="fas fa-user-edit"></i> Personal Information</h3>
                        <form id="profileForm">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label for="name">Full Name</label>
                                    <input type="text" id="name" name="name" value="{{profile.name}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input type="email" id="email" name="email" value="{{profile.email}}" required>
                                </div>
                                <div class="form-group">
                                    <label for="phoneNumber">Phone Number</label>
                                    <input type="tel" id="phoneNumber" name="phoneNumber" value="{{profile.phoneNumber}}" placeholder="Enter phone number">
                                </div>
                                <div class="form-group full-width">
                                    <label for="bio">Bio</label>
                                    <textarea id="bio" name="bio" rows="3" placeholder="Tell us about yourself...">{{profile.bio}}</textarea>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Update Profile
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="fas fa-undo"></i> Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Account Settings -->
                <div class="settings-panel">
                    <div class="details-section">
                        <h3><i class="fas fa-cog"></i> Account Settings</h3>
                        
                        <!-- Account Status -->
                        <div class="setting-group">
                            <h4><i class="fas fa-shield-alt"></i> Account Status</h4>
                            <div class="status-info">
                                <div class="status-item">
                                    <span class="label">Account Type:</span>
                                    <span class="value">{{#if profile.isActive}}Standard User{{else}}Inactive{{/if}}</span>
                                </div>
                                <div class="status-item">
                                    <span class="label">Verification:</span>
                                    <span class="value verified">
                                        <i class="fas fa-check-circle"></i> Email Verified
                                    </span>
                                </div>
                                <div class="status-item">
                                    <span class="label">Member Since:</span>
                                    <span class="value">{{stats.memberSince}}</span>
                                </div>
                            </div>
                        </div>

                        <!-- Privacy Settings -->
                        <div class="setting-group">
                            <h4><i class="fas fa-eye"></i> Privacy Settings</h4>
                            <div class="toggle-setting">
                                <label class="toggle-label">
                                    <input type="checkbox" id="profilePublic" {{#if (eq profile.preferences.privacy 'public')}}checked{{/if}}>
                                    <span class="toggle-slider"></span>
                                    Public Profile
                                </label>
                                <small>Allow others to view your profile information</small>
                            </div>
                            <div class="toggle-setting">
                                <label class="toggle-label">
                                    <input type="checkbox" id="notificationsEnabled" {{#if profile.preferences.notifications}}checked{{/if}}>
                                    <span class="toggle-slider"></span>
                                    Email Notifications
                                </label>
                                <small>Receive updates and notifications via email</small>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="setting-group">
                            <h4><i class="fas fa-bolt"></i> Quick Actions</h4>
                            <div class="action-buttons">
                                <button class="btn btn-outline" onclick="changePassword()">
                                    <i class="fas fa-key"></i> Change Password
                                </button>
                                <button class="btn btn-outline" onclick="downloadData()">
                                    <i class="fas fa-download"></i> Download Data
                                </button>
                            </div>
                            <div class="info-note">
                                <i class="fas fa-info-circle"></i>
                                <span>Account activation/deactivation is managed by administrators only.</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Activity Timeline -->
                <div class="activity-panel">
                    <div class="details-section">
                        <h3><i class="fas fa-history"></i> Recent Activity</h3>
                        <div class="activity-timeline">
                            <div class="timeline-item">
                                <div class="timeline-icon">
                                    <i class="fas fa-sign-in-alt"></i>
                                </div>
                                <div class="timeline-content">
                                    <h4>Logged In</h4>
                                    <p>Last login was {{stats.daysSinceLastLogin}} day(s) ago</p>
                                    <small>{{stats.lastLoginDate}}</small>
                                </div>
                            </div>
                            
                            <div class="timeline-item">
                                <div class="timeline-icon">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="timeline-content">
                                    <h4>Account Created</h4>
                                    <p>Welcome! You've been a member for {{stats.daysSinceJoin}} day(s)</p>
                                    <small>{{stats.memberSince}}</small>
                                </div>
                            </div>
                            
                            {{#if profile.profilePictureUrl}}
                            <div class="timeline-item">
                                <div class="timeline-icon">
                                    <i class="fas fa-camera"></i>
                                </div>
                                <div class="timeline-content">
                                    <h4>Profile Picture Added</h4>
                                    <p>Great! Your profile looks more personal now</p>
                                    <small>Recently</small>
                                </div>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="loading-overlay" style="display: none;">
        <div class="spinner"></div>
        <p>Updating profile...</p>
    </div>

    <script src="/public/js/profile-dashboard.js"></script>
</body>
</html>
